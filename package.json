{
  "name": "excel",
  "version": "1.0.0",
  "description": "web excel",
  "main": "src/index.tsx",
  "scripts": {
    "start": "vite --host --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest --config ./jest.config.js --forceExit --detectOpenHandles",
    "coverage": "npm run test -- --coverage",
    "ci": "npm run repeat && npm run test && npm run build && npm run update-md && npm run lint && npm run type-check && npm run e2e",
    "lint": "npx oxlint@latest --fix",
    "update-md": "node ./scripts/update-md.js",
    "prepare": "husky",
    "repeat": "jscpd --ignore \"**/node_modules/**/*,**/*.test.tsx,**/*.test.ts\" -r html -m strict -l 7 -b -g --exitCode 1 .",
    "install-font": "cp ./scripts/SourceCodePro-VariableFont_wght.ttf /usr/share/fonts/ && fc-cache -fv",
    "e2e": "npx playwright test",
    "type-check": "tsc --build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nusr/excel.git"
  },
  "keywords": [],
  "author": "Steve Xu",
  "license": "MIT",
  "homepage": "https://nusr.github.io/excel",
  "devDependencies": {
    "@playwright/test": "1.48.2",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.9.0",
    "@types/pixelmatch": "5.2.6",
    "@types/pngjs": "6.0.5",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.3.3",
    "canvas": "2.11.2",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "pixelmatch": "6.0.0",
    "pngjs": "7.0.0",
    "ts-jest": "29.2.5",
    "typescript": "5.6.3",
    "vite": "5.4.11"
  },
  "dependencies": {
    "@sentry/react": "8.38.0",
    "chart.js": "4.4.6",
    "comlink": "4.4.2",
    "jszip": "3.10.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "ssf": "https://cdn.sheetjs.com/ssf-0.11.3/ssf-0.11.3.tgz"
  },
  "engines": {
    "pnpm": "9.13.2"
  },
  "pnpm": {
    "overrides": {
      "pixelmatch": "5.3.0"
    }
  }
}
