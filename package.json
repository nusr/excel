{
  "private": true,
  "description": "Online Collaboration Excel",
  "author": "Steve Xu <stevexugc@gmail.com>",
  "bugs": "https://github.com/nusr/excel/issues",
  "homepage": "https://github.com/nusr/excel",
  "repository": "git+https://github.com/nusr/excel.git",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "packages/demo/*"
  ],
  "scripts": {
    "start": "run-p dev:*",
    "dev:frontend": "lerna run start --scope frontend",
    "dev:websocket": "lerna run websocket --scope backend",
    "dev:backend": "lerna run start --scope backend",
    "type-check": "lerna run type-check",
    "build": "lerna run build",
    "test": "lerna run test",
    "e2e": "lerna run e2e",
    "coverage": "lerna run test -- --coverage",
    "lint": "npx oxlint@latest --fix",
    "update-md": "node ./scripts/update-md.js",
    "prepare": "husky",
    "repeat": "jscpd --ignore \"**/*.test.tsx,**/*.test.ts\" --reporters html --mode strict --min-lines 7 --blame --gitignore --exitCode 1 .",
    "install-font": "cp ./scripts/SourceCodePro-VariableFont_wght.ttf /usr/share/fonts/ && fc-cache -fv"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "canvas": "^3.1.1",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "lerna": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "catalog:",
    "pngjs": "^7.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0"
    }
  }
}